{
  "name": "stackr",
  "version": "1.0.0",
  "description": "pile up knowledge",
  "main": "index.js",
  "author": "Adrien Antoine",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/adriantoine/stackr"
  },
  "engines": {
    "node": "0.11.x"
  },
  "scripts": {
    "deploy:mkdir:styles": "rm -rf assets/dist/styles && mkdir assets/dist/styles",
    "deploy:mkdir:scripts": "rm -rf assets/dist/scripts && mkdir assets/dist/scripts",
    "deploy:mkdir": "npm run deploy:mkdir:scripts & npm run deploy:mkdir:styles",
    "deploy:browserify": "gulp js",
    "deploy:sass:landing": "bundle exec sass --style compressed assets/src/styles/landing.scss:assets/dist/styles/landing.css",
    "deploy:sass:main": "bundle exec sass --style compressed assets/src/styles/main.scss:assets/dist/styles/main.css",
    "deploy:sass": "npm run deploy:sass:landing & npm run deploy:sass:main",
    "deploy": "npm run deploy:browserify & npm run deploy:sass",
    "build:sass": "bundle exec sass --style compressed --watch assets/src/styles/main.scss:assets/dist/styles/main.css",
    "watch:sass": "nodemon -e scss -x \"npm run build:sass\"",
    "watch:browserify": "gulp watch:js",
    "watch:node": "nodemon --harmony server.js",
    "watch": "npm run watch:node & npm run watch:sass & npm run watch:browserify",
    "start": "npm run deploy:mkdir && npm run deploy && node --harmony server.js",
    "test": "NODE_ENV=test node --harmony ./node_modules/.bin/_mocha --reporter spec --recursive --timeout 30s --bail",
    "test-cov": "NODE_ENV=test node --harmony node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- --reporter spec --timeout 2m --bail --recursive",
    "test-travis": "NODE_ENV=test node --harmony node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha --report lcovonly -- --reporter dot --timeout 2m --bail --recursive"
  },
  "dependencies": {
    "browserify": "^6.2.0",
    "delorean": "^0.8.6",
    "es6ify": "^1.5.1",
    "gulp": "^3.8.10",
    "koa": "^0.13.0",
    "koa-bodyparser": "^1.0.1",
    "koa-generic-session": "^1.2.2",
    "koa-hbs": "^0.5.0",
    "koa-logger": "^1.2.2",
    "koa-passport": "^1.1.2",
    "koa-redis": "^0.1.1",
    "koa-router": "^3.5.0",
    "koa-static": "^1.4.7",
    "lodash": "^2.4.1",
    "moment": "^2.8.3",
    "passport-twitter": "^1.0.2",
    "react": "^0.12.0",
    "react-tools": "^0.12.0",
    "reactify": "^0.15.2",
    "require-dir": "^0.1.0",
    "thunkify-wrap": "^1.0.2",
    "twit": "^1.1.18",
    "twitter-text": "^1.9.4",
    "vinyl-source-stream": "^1.0.0"
  },
  "devDependencies": {
    "chai": "^1.9.2",
    "istanbul": "^0.3.2",
    "mocha": "^2.0.1",
    "nodemon": "^1.2.1",
    "sinon": "^1.11.1",
    "sinon-chai": "^2.6.0"
  }
}
